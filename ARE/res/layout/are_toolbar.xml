<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/rteEmoji"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:src="@drawable/emoji" 
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/rteFontsize"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:src="@drawable/fontsize" 
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/rteFontface"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:src="@drawable/fontface" 
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/rteBold"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:src="@drawable/bold" />

        <ImageView
            android:id="@+id/rteItalic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:src="@drawable/italic" />

        <ImageView
            android:id="@+id/rteUnderline"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:src="@drawable/underline" />

        <ImageView
            android:id="@+id/rteStrikethrough"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:src="@drawable/strikethrough" />

        <ImageView
            android:id="@+id/rteBackground"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:src="@drawable/background"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/rteListNumber"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:src="@drawable/listnumber" />

        <ImageView
            android:id="@+id/rteListBullet"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:src="@drawable/listbullet" />

        <ImageView
            android:id="@+id/rteIndentRight"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:src="@drawable/indentright"
            android:visibility="gone"
             />

        <ImageView
            android:id="@+id/rteIndentLeft"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:src="@drawable/indentleft" 
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/rteAlignLeft"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:src="@drawable/alignleft" />

        <ImageView
            android:id="@+id/rteAlignCenter"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:src="@drawable/aligncenter" />

        <ImageView
            android:id="@+id/rteAlignRight"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:src="@drawable/alignright" />

        <ImageView
            android:id="@+id/rteInsertImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:src="@drawable/image" />

        <ImageView
            android:id="@+id/rteAt"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:src="@drawable/at" />
    </LinearLayout>

</merge>